<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/linearLayout"
                                             android:layout_marginTop="5dp" android:background="@color/colorPrimary">

    <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFundal"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp" android:textStyle="bold" android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:gravity="center_vertical"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/textView">
        <TextView
                android:id="@+id/textView_cod"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorFundal"
                android:textSize="14sp"
                android:textAlignment="center"
                android:fadingEdge="horizontal" android:fadingEdgeLength="2sp"
                android:layout_weight="2"
                android:layout_margin="1dp"
                android:textColor="@android:color/background_light"
                android:gravity="center_vertical" android:maxWidth="15dp"/>
        <TextView
                android:id="@+id/textView_data"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorFundal"
                android:textSize="14sp"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="2sp"
                android:layout_weight="2" android:textAlignment="center" android:layout_margin="1dp"
                android:textColor="@android:color/background_light"
                android:gravity="center_vertical"/>
        <TextView
                android:id="@+id/textView_buget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/colorFundal"
                android:textSize="14sp"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="2sp"
                android:layout_weight="2"
                android:textAlignment="center" android:layout_margin="1dp"
                android:textColor="@android:color/background_light"
                android:gravity="center_vertical"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>